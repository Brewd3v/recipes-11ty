---
layout: layouts/base.njk
---
<article>
    <a href="/">Back to recipes</a>
    <h1 class="mt-12">{{ title }}</h1>
    <div>
        <div class="">
            <h2>Ingredients</h2>
            <ul>
                {% for ingredient in ingredients %}
                    <li>{{ ingredient }}</li>
                {% endfor %}
            </ul>
        </div>
        <div>
            <h2>Steps</h2>
            <ol>
                {% for step in steps %}
                    <li>{{ step }}</li>
                {% endfor %}
            </ol>
        </div>
        {{ content | safe }}
    </div>
</article>